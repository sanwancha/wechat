<template name="postItem">
  <view class="post-container">
    <view class="post-author-date">
      <image wx:if="{{img_condition}}" class="post-author" src="{{avatar}}"></image>
      <text class="post-date">{{date}}</text>
    </view>
    <text class="post-title">{{title}}</text>
    <image class="post-image" src="{{image}}"></image>
    <text class="post-content">{{content}}</text>
    <view class="post-like">
      <image class="post-like-image" src="../../images/posts/icon/icon_view.png"></image>
      <text class="post-like-font">{{post_view}}</text>
      <image class="post-like-image" src="../../images/posts/icon/icon_Collection.png"></image>
      <text class="post-like-font">{{post_collection}}</text>
    </view>
  </view>
</template>