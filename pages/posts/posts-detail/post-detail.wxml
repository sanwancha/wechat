<view wx:for="{{postDetailKey}}" wx:for-item="post">
  <view class="container">
    <image class="head-image" src="{{postData.headImgSrc}}"></image>
    <image class="audio" src="../../../images/posts/icon/audio.png"></image>
    <view class="author-data">
      <image class="avatar" src="{{postData.avatarr}}"></image>
      <text class="author">{{postData.author}}</text>
      <text class="const-text">发表于</text>
      <text class="date">{{postData.dateTime}}</text>
    </view>
    <text class="title">{{postData.title}}</text>
    <view class="tool">
      <view class="circle-img">
        <image class="" src="../../../images/posts/icon/collection.png"></image>
        <image class="share-img" src="../../../images/posts/icon/share.png"></image>
      </view>
      <view class="horizon"></view>
    </view>
    <text class="detail">{{postData.detail}}</text>
  </view>
</view>